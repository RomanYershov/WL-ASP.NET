
@{
    ViewBag.Title = "Comments";
}

@model List<Comments>
@{
    ViewBag.Title = "Comments";
}

<div class="well">
    @if (Model.FirstOrDefault()?.Discussions.Name != null)
    {
        <h2>@Model.FirstOrDefault().Discussions.Name</h2>
    }
    else
    {
        <h4>В этом обсуждении пока отсутствуют комментарии ..</h4>
    }
</div>

<div class="row">
    <div class="col-md-8">

        @foreach (var comment in Model)
        {
            <div class="alert alert-success">
                <span class="alert-info">@comment.Text</span>  <i class="label label-default">(@comment.Users.Email)</i>
            </div>
        }


    </div>
    <div class="col-md-4">
        @{Html.RenderPartial("CategoriesPartialView", ViewBag.CategoriesList as List<Categories>);}
    </div>
</div>



