@using WL.Models;
@model  ForumViewModel

<h2>@User.Identity.Name</h2>


<div class="container">
    <div class="row">
        <div class="col-md-8 text-center">
            <div class="well">
                <table class="table  table-striped table-hover">
                    <thead>
                        <tr>
                            <th><b>Обсуждение</b></th>
                        </tr>
                    </thead>
                    @foreach (var discussion in Model.Discussions)
                    {
                        <tr>
                            <td><a href="~/Forum/Comments/@discussion.Id">@discussion.Name</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="col-md-4 text-center">
                @{Html.RenderPartial("CategoriesPartialView", Model.Categories.ToList());}
        </div>
    </div>
</div>


